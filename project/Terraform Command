# Map/Obejct:

37   vim main.tf
provider "aws" {
region ="us-east-1"
}
resource "aws_instance" "example" {
ami =""
instance_type = "t2.micro"
tags = var.pro_env
}
variable "pro_env" {
description = "this is for instance type"
type = map(string)
defualt = {
project = "swiggy"
env = "prod"
manager = "raham"
}
}

38   terraform apply --auto-approve
39   terraform destroy --auto-approve
